[1]
Description=(Fix) Prevent Office from getting stuck being maximised
ignoregeometry=true
ignoregeometryrule=2
wmclass=(winword.exe|excel.exe|powerpnt.exe|onenote.exe|mspub.exe)
wmclasscomplete=true
wmclassmatch=3

[2]
Description=(BREEZE DECORATIONS ONLY) Certain Apps Shadows Workaround
noborder=false
noborderrule=2
wmclass=(vivaldi-stable)
wmclasscomplete=true
wmclassmatch=3

[3]
Description=(Fix) Force ALL Windows Applications/Games/etc to be Closeable
closeable=true
closeablerule=2
wmclass=wine
wmclasscomplete=true
wmclassmatch=2

[4]
Description=Feren Themer GTK Dark Titlebars Workaround
decocolor=FerenDark
decocolorrule=2
noborder[$d]
noborderrule[$d]
wmclass=(io.elementary.photos|cheese|quadrapassel)
wmclasscomplete=true
wmclassmatch=3

[General]
count=4
